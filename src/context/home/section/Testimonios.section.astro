---
import "@fontsource/rye";
import ItemTestimonio from "@src/components/ItemTestimonio.component.astro";

interface Item {
  name: string;
  comment: string;
}

interface Props {
  title1: string;
  title2: string;
  items: Item[];
}

const { items, title1, title2 } = Astro.props as Props;
---

<section class="bg-app-primary py-16 px-36">
  <div class="max-w-7xl mx-auto text-center">
    <h2
      class="text-app-terciary text-2xl uppercase tracking-widest rye-font mb-2"
    >
      {title1}
    </h2>
    <h3 class="text-app-terciary text-3xl md:text-5xl font-bold italic mb-10">
      {title2}
    </h3>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-16 text-app-terciary"
    >
      {
        items.map((item) => (
          <ItemTestimonio name={item.name} comment={item.comment} />
        ))
      }
    </div>
  </div>
</section>

<style>
  .rye-font {
    font-family: "Rye", system-ui;
  }
</style>
