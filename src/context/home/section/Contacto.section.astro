---
import ItemContacto from "@src/components/ItemContacto.component.astro";

interface Item {
    title: string;
    nameLink: string;
    description: string;
    urlPath: string;
}

interface Props {
    items: Item[];
}

const { items } = Astro.props as Props;
---


<section id="sectionContacto-home" class="bg-app-terciary py-20 px-20">
  <!-- Responsive optimizado --> 
  <div
    class="max-w-7xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 text-app-terciary"
  >


    {
        items.map((item) => (
            <ItemContacto
            title={item.title}
            description={item.description}
            nameLink={item.nameLink}
            urlPath={item.urlPath}
            />
        ))
    }

  </div>
</section>
